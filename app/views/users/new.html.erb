<h1>Signup</h1>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :pasword_again %>
  <%= f.password_field :password_confirmation %>
  <br>
  <br>
  <%= f.submit "Signup!" %>
<% end %>

<h1>Login</h1>

<%= form_for @user, url: {action: "login"}, html: {class: "new_session"} do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <br>
  <%= f.submit "Login!" %>
<% end %>
